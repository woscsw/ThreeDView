<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="distanceX: "/>
    <TextView
        android:id="@+id/tv_x_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_x"
        android:text="-"/>
    <TextView
        android:id="@+id/tv_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tv_x"
        android:text="distanceY: "/>
    <TextView
        android:id="@+id/tv_y_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_y"
        android:layout_below="@+id/tv_x_value"
        android:text="-"/>
    <TextView
        android:id="@+id/tv_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tv_y"
        android:text="rotateDeg: "/>
    <TextView
        android:id="@+id/tv_rotate_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_rotate"
        android:layout_below="@+id/tv_y_value"
        android:text="-"/>
    <TextView
        android:id="@+id/tv_cameraZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tv_rotate"
        android:text="cameraZ: "/>
    <TextView
        android:id="@+id/tv_cameraZ_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_cameraZ"
        android:layout_below="@+id/tv_rotate_value"
        android:text="-"/>
    <com.example.zxw.glidetest.ThreeDView7
        android:id="@+id/three_d_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60px"
        android:layout_centerInParent="true"
        android:visibility="visible"/>
    <com.example.zxw.glidetest.CircleIndicatorView
        android:id="@+id/indicator_view"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:indicatorSelectColor="#00A882"
        app:fill_mode="letter"
        app:indicatorBorderWidth="2dp"
        app:indicatorRadius="20dp"
        app:indicatorColor="@color/colorAccent"
        app:indicatorTextColor="@android:color/white"
        />

</RelativeLayout>
